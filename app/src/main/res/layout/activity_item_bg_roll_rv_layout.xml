<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <com.example.administrator.myappgit.ui.TravelRecyclerView
        android:id="@+id/trv_showImages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </com.example.administrator.myappgit.ui.TravelRecyclerView>

    <include layout="@layout/refresh_network_error_layout"/>

    <com.example.administrator.myappgit.ui.WhorlView
        android:id="@+id/wv_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:whorlview_circle_colors="#5677fc_#F44336_#4CAF50"
        app:whorlview_circle_speed="360"
        app:whorlview_parallax="fast"
        />
</RelativeLayout>