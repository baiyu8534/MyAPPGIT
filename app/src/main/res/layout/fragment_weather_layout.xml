    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clipChildren="false"
        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>